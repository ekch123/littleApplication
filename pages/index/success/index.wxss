/* pages/product/productDetailsIntroduce.wxss */
.img{
  height: 540rpx;
}
.productprice{
  color: #58a4b4;
  font-size: 36rpx;
}
.productname{
  font-size: 36rpx;
}
.main_top{
  margin-top: 34rpx;
}
.specification{
  margin-top:66rpx;
  
}
.specification>view{
    line-height: 66rpx;
    font-size: 36rpx;
}
.specification>view:nth-child(2){
    color: #adadad;
}
.discounts{
  margin-top: 66rpx;
  font-size: 36rpx;
}
.comment{
  padding: 50rpx 0;
  height: 48rpx;

}
.comment image{
  height: 100%;
}
.cate_box{
  margin-top: 30rpx;
  display: flex;
  justify-content:space-between;
}
.cate_box>view{
  width: 22.8%;
  line-height: 70rpx;
  color: #b0b0b0;
  border: 1rpx solid #cccccc;
  border-radius: 35rpx;
  font-size: 30rpx;
}
/* 评论 */
.message_top{
  margin-top: 60rpx;
}
.photo{
  width: 20%;
}
.mesg{
  font-size: 32rpx;
  /* line-height: 32rpx; */
  color: #adadad;
  margin-bottom: 10rpx;
}
.message{
  width: 80%;
}
.photo>view{
  width: 100rpx;
  height: 100rpx;
}
.photo>view>image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.message>view{
  line-height: 60rpx;
  font-size: 32rpx;
}
.message>view>text:nth-child(1){
  color: #494949;
}
.message>view>text:nth-child(2){
  color: #adadad;
}
/* 查看全部评论 */
.check{
  width: 40%;
  line-height: 68rpx;
  border: 1rpx solid #58a4b4;
  border-radius: 34rpx;
  margin:50rpx auto;
  color: #58a4b4;
}
/* 介绍详情 */
.introduce{
    width: 344rpx;
    height: 50rpx;
    margin: 0 auto;
    margin-bottom: 20rpx;
}
.introduce>image{
    width: 100%;
    height: 100%;
}
.introduce_date>view{
    line-height: 70rpx;
    font-size: 34rpx;
}
.introduce_date>view>text{
    color: #adadad;
}
/* 底部 */
#footer{
    height: 90rpx;
}
#footer>view{
    float: left;
}
#footer>view:nth-child(2){
    border-left: 2rpx solid #fff;
    border-right: 2rpx solid #fff;
}

.shoping{
    width: 27%;
}
.shoping>view:nth-child(1){
    position: relative;
    height: 50%;
}
.shop_num{
    width: 30rpx;
    height: 30rpx;
    font-size: 28rpx;
    color: #fff;
    border-radius: 50%;
    background: #f33c3c;
    position: absolute;
    left: 55%;
    top: 0;
}
.shoping>view:nth-child(2){
    height: 50%;
    color: #666;
    font-size: 30rpx;
}
.shoping_img{
    width: 50rpx;
    height: 40rpx;
       
    margin-left: 80rpx;
}
.join{
    width: 36%;
    line-height: 90rpx;
    background: #58a4b4;
    color: #fff;
}

.hover_join{
    background: #fff;
    color: #58a4b4;
}