.fr{
  float: right;
}
.box{
  width: 95%;
  margin: 20rpx auto 0;
  position: relative;
}
view{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
}
image{
  width: 16rpx;
  height: 32rpx;
  float: right;
  margin: 34rpx 0 0 30rpx;
}
.photo{
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  background-color: #999;
  margin-top:15rpx;
}
text{
  font-size: 32rpx;
  color: #333;
}
.hide{
 display: none;
}
.show{ 
 display: block;
}
.gender{
  width: 600rpx;
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  top: 0;
  margin: 180rpx auto;
}
.gender text{
  display: block;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #fff
}
.gender text:first-child{
  background-color: #58a4b4;
  border-radius: 10rpx 10rpx 0 0;
  color: #fff;
}
.birth{
  font-size: 32rpx;
  color: #333;
}
