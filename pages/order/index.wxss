/* pages/order/index.wxss */
.ordertype{
  width: 100%;
  height: 100rpx;
  margin-top: 1rpx;
}
.ordertype view{
  width: 33%;
  height: 100rpx;
  background: #71b1be;
  float: left;
  margin-left: 0.5%;
  line-height: 100rpx;
  color: #fff;
  text-align: center;
  font-size: 30rpx;
}
.ordertype view:nth-child(1){
  margin: 0;
}
.ordertype .active{
  background: #58a4b4;
}
.all{
  width: 100%;
  height: auto;
  background: #f5f5f5;
}
.orders{
  width: 95%;
  height: auto;
  padding: 0 2.5% 0 2.5%;
  background: #fff;
  margin-bottom: 20rpx;
}
.state{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  color: #999;
}
.state text:nth-child(2){
  float: right;
}
.main{
  width: 100%;
  margin-top:20rpx;
  height: 200rpx;
}
.main image{
  width: 30%;
  float: left;
  height: 200rpx
}
.name{
  width: 65%;
  float: right;
  height: auto;
  line-height: 60rpx;
  font-size: 30rpx;
  margin-top: 10rpx;
}
.name text:nth-child(2){
  float: right;
}
.size{
  width: 65%;
  float: right;
  height: auto;
  line-height: 60rpx;
  font-size: 30rpx;
  color: #999;
}
.num{
  width: 65%;
  float: right;
  height: auto;
  line-height: 60rpx;
  font-size: 30rpx;
  color: #999;
}
.num text:nth-child(2){
  float: right;
  color: #000;
}
.clear{
  clear: both;
} 
.total{
  width: 100%;
  height: 60rpx;
  padding: 40rpx 0 40rpx 0;
  line-height: 60rpx;
}
.total text{
  font-size: 32rpx;
  color: #999;
}
.total view{
  width: 28%;
  height: auto;
  font-size: 30rpx;
  text-align: center;
  color: #fff;
  background: #999;
  float: right;
  border-radius: 30rpx;
  margin-left: 15rpx;
}
.total .paid{
  background: #58a4b4;
}
.nostatus{
  display: none;
}
.board{
  width: 100%;
  height: 100%;
  position: fixed;
  background: rgba(0,0,0,0.3);
  top: 0;
  left: 0;
}
.board1{
  width: 100%;
  height: 100%;
  position: fixed;
  background: rgba(0,0,0,0.3);
  top: 0;
  left: 0;
  display: none;
}
.popup{
  width: 80%;
  height: 285rpx;
  box-shadow: 10rpx 10rpx 50rpx #888888;
  position: fixed;
  background: #fff;
  top: 35%;
  left: 10%;
}
.popup view:nth-child(1){
  margin: 10% auto;
  font-size: 30rpx;
  text-align: center;
}
.popup button{
  width: 35%;
  float: left;
  height: auto;
  border-radius: 37rpx;
  line-height: 65rpx;
  font-size: 28rpx;
  margin-left: 10%;
  color: #fff;
  background: #58a4b4;
}
.popup button:nth-child(2){
  background: #666;
}
