/* pages/product/index.wxss */
.box{
  margin-top: 40px;
  width: 100%;
  height: 1000rpx;
  position: relative;
}
.phonenum{
  font-size: 32rpx;
  height: 66rpx;
  margin-bottom: 40px;
  
}
.phonenum input{
  color: #ccc;
  width: 300rpx;
  float: left;
  line-height: 66rpx;
}
.phonenum text{
  float: left;
  margin-right: 10rpx;
  padding: 0 20rpx;
  line-height: 66rpx;
}
.code{
  padding: 0;
  width: 210rpx;
  font-size: 32rpx;
  background-color: #58a4b4;
  border-radius: 33rpx;
  height: 66rpx;
  float: right;
  color: #fff;
  line-height: 66rpx;
  margin-right: 30rpx;
}
.submit{
  position: absolute;
  background-color: #58a4b4;
  left: 0;
  bottom: 0;
  width: 100%;
  font-size: 36rpx;
  color: #fff;
}
